<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/primary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/shape_rounded_item"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1">
            <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Alicia Garcia"
            android:fontFamily="@font/inika"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo: example@gmail.com"
                android:fontFamily="@font/inika"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/btnEditDoctor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_rounded_item"
                android:backgroundTint="@color/dark_details"
                app:srcCompat="@drawable/button_edit_image"
                android:baseline="@color/dark_details"
                android:layout_marginBottom="5dp"/>

            <ImageButton
                android:id="@+id/btnDeleteDoctor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_rounded_item"
                android:backgroundTint="@color/danger"
                app:srcCompat="@drawable/button_delete_image"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>