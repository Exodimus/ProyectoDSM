<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_fragments.CreateAttendantFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/imageBack1"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:adjustViewBounds="true"
            android:contentDescription="Fondo1"
            android:rotation="20"
            android:layout_gravity="center|end"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/back_utils_2"
            />

        <ImageView
            android:id="@+id/imageBack2"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:adjustViewBounds="true"
            android:contentDescription="Fondo2"
            android:rotation="340"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="130dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/back_utils_3"/>

        <ImageView
            android:id="@+id/imageBack3"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:adjustViewBounds="true"
            android:contentDescription="Fondo3"
            android:rotation="340"
            android:layout_gravity="center|start"
            android:layout_marginBottom="200dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/back_utils_4"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="40dp"
                android:paddingHorizontal="55dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/attendandtTittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/inika"
                    android:text="Registro de Encargados"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Veterinaria"
                        app:srcCompat="@drawable/ic_female_doctor"
                        android:layout_marginEnd="110dp"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Veterinario"
                        app:srcCompat="@drawable/ic_male_doctor" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:layout_marginBottom="30dp"
                    app:boxCollapsedPaddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_input"
                        android:fontFamily="@font/inika"
                        android:textSize="16sp"
                        android:paddingVertical="13dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellidos"
                    android:layout_marginBottom="30dp"
                    app:boxCollapsedPaddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_input"
                        android:fontFamily="@font/inika"
                        android:textSize="16sp"
                        android:paddingVertical="13dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DUI"
                    android:layout_marginBottom="30dp"
                    app:boxCollapsedPaddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_input"
                        android:fontFamily="@font/inika"
                        android:inputType="text"
                        android:paddingVertical="13dp"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Direccion"
                    android:layout_marginBottom="30dp"
                    app:boxCollapsedPaddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_input"
                        android:fontFamily="@font/inika"
                        android:textSize="16sp"
                        android:paddingVertical="13dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ciudad"
                    android:layout_marginBottom="30dp"
                    app:boxCollapsedPaddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_input"
                        android:fontFamily="@font/inika"
                        android:textSize="16sp"
                        android:paddingVertical="13dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    android:layout_marginBottom="30dp"
                    app:boxCollapsedPaddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rounded_input"
                        android:fontFamily="@font/inika"
                        android:textSize="16sp"
                        android:paddingVertical="13dp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnAddAttendant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_details"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inika"
                    android:paddingHorizontal="10dp"
                    android:text="Guardar"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/btnCancelAttendant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/danger"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inika"
                    android:paddingHorizontal="10dp"
                    android:text="Cancelar"
                    android:textSize="21sp" />

            </LinearLayout>

        </ScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>